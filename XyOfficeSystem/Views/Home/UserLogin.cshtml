        border: none;
        color: rgb(0, 0, 0);
    }

    .login_form {
        background: rgb(43, 43, 54);
        padding: 0px;
    }

        .login_form input[type="text"] {
            width: 100%;
            color: rgb(145, 153, 170);
            font-size: 18px;
            border-top-width: initial;
            border-right-width: initial;
            border-left-width: initial;
            border-top-color: initial;
            border-right-color: initial;
            border-left-color: initial;
            font-weight: 100;
            margin-top: 2em;
            padding: 1em 2em 1em 3em;
            outline: none;
            background: url(/Images/Home/index/user_min_head.png) 10px 15px no-repeat;
            border-style: none none solid;
            border-image: initial;
            border-bottom: 1px solid rgb(72, 72, 86);
        }

        .login_form input[type="password"] {
            width: 100%;
            color: rgb(221, 62, 62);
            font-size: 18px;
            border-top-width: initial;
            border-right-width: initial;
            border-left-width: initial;
            border-top-color: initial;
            border-right-color: initial;
            border-left-color: initial;
            font-weight: 100;
            margin-bottom: 3em;
            padding: 1em 2em 1em 3em;
            outline: none;
            background: url(/Images/Home/index/user_min_key.png) 10px 23px no-repeat;
            border-style: none none solid;
            border-image: initial;
            border-bottom: 1px solid rgb(72, 72, 86);
        }

    .btn_longi_submit {
        display: block;
        text-align: center;
        line-height: 65px;
        font-size: 20px;
        color: #fff;
        outline: none;
        border: none;
        background: #3ea751;
        width: 100%;
        border-bottom-left-radius: 10px;
        -webkit-border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        -webkit-border-bottom-right-radius: 10px;
        cursor: pointer;
        height: 65px;
    }

        .btn_longi_submit :hover {
        }

    .user_head_box {
        height: 115px;
        margin: 0;
        padding: 0;
        border: 0;
        font-size: 100%;
        font: inherit;
        vertical-align: baseline;
        text-align: center;
    }

        .user_head_box img {
            max-width: 100%;
            height: 75px;
            border-radius: 50%;
            margin: auto;
            margin: 2em 0 0;
        }

    .close {
        cursor: pointer;
        width: 20px;
        height: 20px;
        position: absolute;
        left: 20px;
        top: 20px;
        background: url(/Images/Home/index/close.png) 0px 0px no-repeat;
        transition: color 0.2s ease-in-out;
    }

    .bottom_radius {
        border-bottom-left-radius: 10px;
        -webkit-border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
        -webkit-border-bottom-right-radius: 10px;
    }
</style>




<div class="div_login_bg_box">
    <div class="carousel screen_Size" id="login_bg_carousel">

        <div class="carousel-inner screen_Size">
            <div class="carousel-item screen_Size active">
                <img class="screen_Size" src="/Images/Home/index/bg0.jpg" />
            </div>
            <div class="carousel-item screen_Size ">
                <img class="screen_Size" src="/Images/Home/index/bg1.jpg" />
            </div>
            <div class="carousel-item screen_Size ">
                <img class="screen_Size" src="/Images/Home/index/bg2.jpg" />
            </div>
        </div>


    </div>
    <div class="progress carousel_progress" id="login_bg_progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="60"
             aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
            <span class="sr-only">40% 完成</span>
        </div>
    </div>
</div>

<div class="div_login_box">
    <div class="login_center_box">
        <div class="login_title">
            <div class="close"></div>
        </div>
        <div class="login_body">
            <div class="user_head_box login_form">
                <img src="~/Images/Home/index/user_default_big_ico.png" />
            </div>

            <form class="form-control login_form bottom_radius" id="form_login" action='@Url.Action("UserLogin","Home")?action=login' method="post" autocomplete="off">
                <input type="text" name="user_login_name" id="user_login_name" placeholder="手机号码/邮箱/账号" />
                <input type="password" name="user_login_pwd" id="user_login_pwd" placeholder="登录密码" />
                <input class="btn_longi_submit" type="submit" value="登录" />
            </form>
        </div>
    </div>

</div>


