    function initImage() {

        //$('#login_bg_carousel').carousel({ interval: 5000 });
        var allView = $(".carousel-item");
        var count = allView;
        var curentIndex = 0;
        var currTime = 0;
        var timeCount = 1000;

        setInterval(function () {
            var progress = (currTime / timeCount) * 100;
            $("#login_bg_progress").find(".progress-bar").css("width", progress + "%");
            if (currTime >= timeCount) {
                if (curentIndex >= count - 1) {
                    curentIndex = 0;
                    $("#login_bg_carousel").carousel(0);
                } else {
                    $("#login_bg_carousel").carousel("next");
                }
                curentIndex++;
                currTime = 0;

            }

            currTime += 10;
        }, timeCount);
    }
