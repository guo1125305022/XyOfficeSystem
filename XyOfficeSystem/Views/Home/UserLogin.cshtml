    .login_title {
        width: 100%;
        text-align: center;
        line-height: 50px;
        color: white;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        font-weight: 600;
        color: rgb(255, 255, 255);
        height: 50px;
        padding: 5px 0px;
        background: rgb(35, 35, 46);
    }

    .login_body {
        width: 100%;
